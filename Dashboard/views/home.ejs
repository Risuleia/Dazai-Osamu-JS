<%- include('base-header') -%>
<div id="main">
    <h1 class="heading text-uppercase odd">Stats</h1>
    <section class="graph-section">
        <div class="graphs" selectable="false">
            <div class="graph-1">
                <div>
                    <%- `<h2>${Math.round(ping)}ms</h2>` %>
                    <p>Bot Latency</p>
                </div>
            </div>
            <div class="graph-2">
                <div>
                    <h2><%= users  %></h2>
                    <p>Users</p>
                </div>
            </div>
            <div class="graph-3">
                <div>
                  <h2><%= guilds %></h2>            <p>Servers</p>                </div>            </div>       <div class="graph-4">
                <div>
                     <h2><%= commands %></h2>
                    <p>Commands</p>
                </div>
            </div>
        </div>
        <div class="tip">
            <div class="arrow">
                <img src="/arrow.png" alt="arrow" selectable="false">
                <img src="/chibis/chibi-1.png" alt="arrow-img" selectable="false">
            </div>
            <p class="tip-text" selectable="false">Looking for the dashboard?</p>
        </div>
    </section>
    <div class="section-divider even"></div>
    <h1 class="heading text-uppercase even">About</h1>
    <section class="about-section">
        <img src="/chibis/chibi-2.jpg" class="img-fluid rounded-circle fluid-logo" selectable="false" alt="logo">
        <div class="about">
